@model List<NTierTodoApp.Models.TaskItem>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>إدارة المهام – n-tier</title>
    <style></style>
        body {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f4f8;
            margin: 20px;
            line-height: 1.6;
            color: #333;
        }

        h1 {
            text-align: center;
            color: #4A90E2;
        }

        ul {
            list-style: none;
            padding: 0;
            max-width: 600px;
            margin: 20px auto;
        }

        li {
            background-color: #fff;
            border-radius: 8px;
            padding: 15px 20px;
            margin-bottom: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        li span {
            font-size: 1.1em;
        }

        li s {
            color: #999;
        }

        form {
            display: inline;
        }

        button {
            background-color: #4A90E2;
            color: #fff;
            border: none;
            padding: 8px 14px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.9em;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #357ab8;
        }

        input[type="text"] {
            padding: 8px 12px;
            width: calc(100% - 100px);
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1em;
            margin-right: 10px;
        }

        .add-task {
            max-width: 600px;
            margin: 30px auto;
            display: flex;
            justify-content: center;
        }

        /* تحسين مظهر النموذج الخاص بإضافة مهمة */
        .add-task input[type="text"] {
            flex: 1;
        }
    </style>
</head>
<body>
    <h1>قائمة المهام (n-tier)</h1>
    <ul>
        @foreach (var task in Model)
        {
            <li>
                <span>
                    @if (task.IsComplete)
                    {
                        <s>@task.Title</s>
                    }
                    else
                    {
                        @task.Title
                    }
                </span>
                <div>
                    @if (!task.IsComplete)
                    {
                        <form method="post" asp-action="CompleteTask">
                            <input type="hidden" name="id" value="@task.Id" />
                            <button type="submit">اكتملت</button>
                        </form>
                    }
                    !-- TODO إضافة زر حذف المهمة --
                    <form method="post" asp-action="DeleteTask" style="margin-left:8px;">
                        <input type="hidden" name="id" value="@task.Id" />
                        <button type="submit">حذف</button>
                    </form>
                </div>
            </li>
        }
    </ul>

    <form method="post" asp-action="AddTask">
        <input type="text" name="title" placeholder="أضف مهمة جديدة" />
        <button type="submit">إضافة</button>
    </form>
</body>
</html>
